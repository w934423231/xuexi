.shangpin{
  width:100%;
  height:660px;
  background:white;
  padding: 0px 10px;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
}
.pin{
  display: inline-block;
  width:46vw;
  height:375rpx;
  border:1px solid red;
  display: flex;
  flex-direction: column;
  justify-content: center;  
  align-items: center;
}
.pin image{
  width:50%;
  height:60px;
}
.pin text{
  font-size:16px;
  float:left;
}